<section class="dark-grey-text space">
    <h2 class="h1 fw-bold mt-3">Read Our Articles</h2>

    <!-- Grid row -->
    <div class="row align-items-center">
        <% for(i=0; i < blogs.length; i++){ %>

            <!-- Grid column -->
            <div class="col-lg-5 col-xl-4 mb-3">

                <!-- Featured image -->
                <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-4">
                    <img class="img-thumbnail"
                         loading="lazy"
                         height="310"
                         width="290"
                         src="<%= blogs[i].image %>"
                         alt="<%= blogs[i].title %>">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-lg-7 col-xl-8 mb-3">

                <!-- Post title -->
                <h4 class="font-weight-bold mb-3"><strong><%= blogs[i].title %></strong></h4>
                <!-- Excerpt -->
                <p class="dark-grey-text">
                    <%= blogs[i].body.substring(0, 220) %> . . .
                </p>
                <!-- Post data -->
                <p>by <a class="font-weight-bold"><%= blogs[i].userid.username %></a>, <%= blogs[i].datePosted.toLocaleString() %></p>
                <!-- Read more button -->
                <a href="/post/<%= blogs[i]._id %>" class="btn btn-outline-brown btn-md mx-0 btn-rounded">Read more</a>

            </div>
            <!-- Grid column -->

        <% } %>

    </div>
    <!-- Grid row -->

    <hr class="my-5">

</section>
<!--Section: Content-->