<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') -%>
<body>
<header>
    <!-- Navbar -->
    <%- include('partials/navBar') -%>
    <!-- Navbar -->

    <!--Section: Design Block-->
    <section>
        <div id="intro" class="bg-image" style="
                background-image: url('<%= singlePost.image %>');
                height: 60vh;
                ">
            <div class="mask h-100" style="background-color: rgba(0, 0, 0, 0.6);">
                <div class="container d-flex justify-content-center align-items-center h-100">
                    <div class="row align-items-center">
                        <div class="col-12 text-center p-3">
                            <nav aria-label="breadcrumb" style="opacity: 0.7;">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/blogs" class="fw-bold text-dark">All Blogs</a></li>
                                    <li class="breadcrumb-item text-dark" aria-current="page">Post Data</li>
                                </ol>
                            </nav>
                            <h1 class="text-white text-center display-3">
                                <%= singlePost.title %>
                            </h1>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Section: Design Block-->
</header>

<main>
    <div class="container my-5 py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">

                <!--Section: Design Block-->
                <section>
                    <div class="d-md-flex justify-content-between mb-3">
                        <p class="text-muted mb-2 mb-md-3"><span>Published <%= singlePost.datePosted.toLocaleString() %></span></p>
                        <div class="d-flex flex-row mb-4 mb-md-0 pb-2 pb-md-0">
                            <p class="text-muted mb-0 me-2">Share this article</p>
                            <a href="#!" class="link-info"><i class="fas fa-share me-2"></i></a>
                            <a href="#!" class="link-info"><i class="fab fa-facebook me-2"></i></a>
                            <a href="#!" class="link-info"><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                    <h2 class="mb-0 pb-4 h1" style="border-bottom: 2px #f5f5f5 solid;"> <%= singlePost.title %></h2>
                    <div class="mt-5">
                        <p class="mb-3"><%= singlePost.body %>.</p>
                        <% if(loggedIn) { %>
                            <a href="/delete/post/<%= singlePost._id %>" class="btn mb-5 btn-warning rounded-pill"> Delete </a>
                        <% } %>
                        <hr class="divider-horizontal" style="margin-bottom: 2rem;">
                        <div class="p-4 bg-light rounded-6">
                            <div class="row">
                                <div class="col-6 col-md-3 col-xl-2 mb-4 mb-md-0 mx-auto">
                                    <img class="w-100 rounded-circle" src="https://media.istockphoto.com/id/1278009593/photo/young-man-using-smart-phone-at-home.jpg?s=612x612&w=0&k=20&c=eErVmquQwbbLsP7Oauw-2pvM6y0icEQv2v1qzDqBx6o=" alt="Author image">
                                </div>
                                <div class="col-md-9 col-xl-10">
                                    <p class="text-muted">Posted By</p>
                                    <div class="d-flex justify-content-between">
                                        <h5 class="pb-1"><%= singlePost.userid.username %></h5>

                                        <div>
                                            <a href="mailto:<%= singlePost.userid.email %>" class="link-info"><i class="far fa-envelope"></i></a>
                                        </div>
                                    </div>
                                    <p class="text-muted fst-italic mb-0"><%= singlePost.userid.about.substring(0, 110) %> . . .
                                        <a class="fw-bold text-black-50 text-decoration-underline" href="/profile/<%= singlePost.userid._id %>">View My Profile</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!--Section: Design Block-->

            </div>
        </div>
    </div>
    <!-- Container for demo purpose -->
</main>

<%- include('partials/footer') -%>
</body>
<%- include('partials/scripts') -%>
</html>